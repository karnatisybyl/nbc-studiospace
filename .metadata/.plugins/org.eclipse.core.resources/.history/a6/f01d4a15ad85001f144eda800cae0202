<?xml version="1.0" encoding="UTF-8"?>
<api context="/{country}/api/v1/accounts" name="retrieveCardsbyAccountNo" xmlns="http://ws.apache.org/ns/synapse">
    <resource methods="GET" uri-template="/cards/{includeCapture}/{includeRestricted}">
        <inSequence>
            <!-- Correcting the property name for includeCapture and includeRestricted -->
            <property expression="get-property('uri.var.country')" name="uri.var.country" scope="default" type="STRING"/>
            <property expression="get-property('uri.var.includeCapture')" name="uri.var.includeCapture" scope="default" type="STRING"/>
            <property expression="get-property('uri.var.includeRestricted')" name="uri.var.includeRestricted" scope="default" type="STRING"/>
            <!-- Logging the incoming request -->
            <log level="full">
                <property name="Request" value="Incoming API Request"/>
                <property expression="get-property('uri.var.country')" name="country"/>
                <property expression="get-property('uri.var.includeCapture')" name="includeCapture"/>
                <property expression="get-property('uri.var.includeRestricted')" name="includeRestricted"/>
            </log>
            <!-- Setting headers -->
            <header name="Accept" scope="transport" value="application/json"/>
            <header expression="get-property('transport', 'x-absa-channel-id')" name="x-absa-channel-id" scope="transport"/>
            <header expression="get-property('transport', 'x-absa-account-no')" name="x-absa-account-no" scope="transport"/>
            <header expression="get-property('transport', 'x-absa-trace-id')" name="x-absa-trace-id" scope="transport"/>
            <!-- Sending the request to the backend -->
            <send>
                <endpoint>
                    <http method="get" uri-template="https://sparrow-rsi-uat.intra.nbc.co.tz:8999/{uri.var.country}/api/v1/accounts/cards?includeCapture={uri.var.includeCapture}&amp;includeRestricted={uri.var.includeRestricted}">
                        <timeout>
                            <duration>10000</duration>
                            <responseAction>discard</responseAction>
                        </timeout>
                        <suspendOnFailure>
                            <initialDuration>-1</initialDuration>
                            <progressionFactor>1</progressionFactor>
                        </suspendOnFailure>
                        <markForSuspension>
                            <retriesBeforeSuspension>0</retriesBeforeSuspension>
                        </markForSuspension>
                    </http>
                </endpoint>
            </send>
        </inSequence>
        <outSequence>
            <property expression="json-eval($)" name="epResponse" scope="default" type="STRING"/>
            <log level="custom">
                <property expression="json-eval($)" name="epResponse"/>
            </log>
            <filter regex="200" source="get-property('axis2', 'HTTP_SC')">
                <then>
                    <enrich>
                        <source clone="true" property="epResponse" type="property"/>
                        <target type="body"/>
                    </enrich>
                </then>
                <else>
                    <enrich>
                        <source clone="true" property="epResponse" type="property"/>
                        <target type="body"/>
                    </enrich>
                </else>
            </filter>
            <send/>
        </outSequence>
        <faultSequence>
            <sequence key="CardManagenetFaultSeq"/>
        </faultSequence>
    </resource>
</api>
